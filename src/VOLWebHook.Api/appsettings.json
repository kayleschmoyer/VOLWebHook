{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "Webhook": {
    "MaxPayloadSizeBytes": 10485760,
    "AlwaysReturn200": true,
    "PayloadStoragePath": "./data/webhooks",
    "EnablePayloadPersistence": true,
    "PayloadRetentionDays": 30,
    "RequestTimeoutSeconds": 30
  },
  "Security": {
    "IpAllowlist": {
      "Enabled": false,
      "AllowedIps": [],
      "AllowedCidrs": [],
      "AllowPrivateNetworks": true
    },
    "ApiKey": {
      "Enabled": false,
      "HeaderName": "X-API-Key",
      "ValidKeys": []
    },
    "Hmac": {
      "Enabled": false,
      "HeaderName": "X-Signature",
      "Algorithm": "HMACSHA256"
    },
    "RateLimit": {
      "Enabled": false,
      "RequestsPerMinute": 100,
      "RequestsPerHour": 1000,
      "PerIpAddress": true
    }
  },
  "Dashboard": {
    "RequireAuthentication": false,
    "HeaderName": "X-Dashboard-Key",
    "ValidApiKeys": [],
    "ExposeConfigurationDetails": true,
    "MaxWebhooksPerRequest": 500,
    "MaxSearchLength": 500
  },
  "ForwardedHeaders": {
    "Enabled": false,
    "TrustedProxies": [],
    "TrustedNetworks": [],
    "ForwardLimit": 1,
    "ForwardedForEnabled": true,
    "ForwardedProtoEnabled": true,
    "ForwardedHostEnabled": false
  },
  "FileLogging": {
    "Enabled": true,
    "LogDirectory": "./logs",
    "FileNamePattern": "webhook-{date}.log",
    "MaxFileSizeBytes": 104857600
  }
}
