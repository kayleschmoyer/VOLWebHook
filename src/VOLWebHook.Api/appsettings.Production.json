{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "Webhook": {
    "PayloadStoragePath": "/var/data/volwebhook/webhooks",
    "PayloadRetentionDays": 90
  },
  "Security": {
    "IpAllowlist": {
      "Enabled": false,
      "AllowedIps": [],
      "AllowedCidrs": [],
      "AllowPrivateNetworks": false
    },
    "ApiKey": {
      "Enabled": false,
      "HeaderName": "X-API-Key",
      "ValidKeys": []
    },
    "RateLimit": {
      "Enabled": true,
      "RequestsPerMinute": 60,
      "RequestsPerHour": 500,
      "PerIpAddress": true
    }
  },
  "FileLogging": {
    "LogDirectory": "/var/log/volwebhook",
    "RetentionDays": 90
  }
}
