{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "System": "Warning"
    }
  },
  "Webhook": {
    "PayloadStoragePath": "/var/data/volwebhook/webhooks",
    "PayloadRetentionDays": 90
  },
  "Security": {
    "IpAllowlist": {
      "Enabled": false,
      "AllowPrivateNetworks": false
    },
    "RateLimit": {
      "Enabled": true,
      "RequestsPerMinute": 60,
      "RequestsPerHour": 500
    }
  },
  "Dashboard": {
    "RequireAuthentication": true,
    "ExposeConfigurationDetails": false,
    "MaxWebhooksPerRequest": 100
  },
  "ForwardedHeaders": {
    "Enabled": false,
    "ForwardLimit": 1
  },
  "FileLogging": {
    "LogDirectory": "/var/log/volwebhook"
  }
}
